
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // A user can only read/write their own game data
    match /userGames/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can list/query user profiles (for searching/inviting)
    match /users/{userId} {
      allow get, list: if request.auth != null;
    }
    
    // Any authenticated user can read/query the leaderboard
    match /leaderboard/{userId} {
      allow get, list: if request.auth != null;
    }
  }
}
