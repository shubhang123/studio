modules = ["nodejs-20", "web", "nix"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 26334636
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_OPTIONS=\"--max-old-space-size=4096\" npm run dev -- --port 5000 --hostname 0.0.0.0"

[[ports]]
localPort = 3000
externalPort = 80
